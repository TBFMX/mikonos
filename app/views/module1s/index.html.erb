<h1>Listing module1s</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @module1s.each do |module1| %>
      <tr>
        <td><%= module1.name %></td>
        <td><%= link_to 'Show', module1 %></td>
        <td><%= link_to 'Edit', edit_module1_path(module1) %></td>
        <td><%= link_to 'Destroy', module1, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

